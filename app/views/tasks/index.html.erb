<h2>All Task</h2>
<p>
  <%= link_to 'New Task', new_task_path %>
</p>

<table>

  <tr>
    <th>Content</th>
    <th>Link</th>
  </tr>

  <tr>
  <% @tasks.each do |task| %>
    <td><%= task.content %></td>
    <td><%= link_to 'Show', task_path(task) %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Delete', task_path(task), method: :delete, data: {confirm: "delete?!?"} %></td>
  </tr>
  <% end %>

</table>
